<UserControl x:Class="FunctionBuilder.WPF.PlotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FunctionBuilder.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="Black"
            BorderThickness="1"
            Margin="5">
            <DockPanel Name="dpPlot" VerticalAlignment="Stretch">
                <Canvas Name="canvasPlot" SizeChanged="CanvasPlot_SizeChanged"></Canvas>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
